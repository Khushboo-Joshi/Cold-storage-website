void loop() {
   
     
    
   
  if(WiFi.status()==WL_CONNECTED)
  {
    WiFiClient client;
    HTTPClient http;
    float t= dht.readTemperature();
    Serial.print("Temperature is : ");
    Serial.print(t-4);
    Serial.println(" Â°C");
    
    float h= dht.readHumidity();
    Serial.print("Humidity is : ");
    Serial.print(h);
    Serial.println(" %");
    
    float p = analogRead(MQ3pin); // read analog input pin 0
    Serial.print("MQ3 Sensor Value: ");
	  Serial.print(p);
    Serial.println(" ppm");

    float s = analogRead(MQ135pin); // read analog input pin 0
    Serial.print("MQ135 Sensor Value: ");
	  Serial.print(s);
    Serial.println(" ppm");

    float l = lightMeter.readLightLevel();
    Serial.print("Light sensor value is : ");
    Serial.print(l);
    Serial.println(" lx");
    

if (t>33 or s>500 )
  {
    digitalWrite(FAN_PIN, HIGH);
   
}
  else {
    digitalWrite(FAN_PIN, LOW);
 
    
  } 

 

 

lcd.setCursor(0, 0);
lcd.print("HUMIDITY");

lcd.setCursor(0,1);
lcd.print(h);
delay(1500);
lcd.clear();

lcd.setCursor(0, 0);
lcd.print("TEMPERATURE");

lcd.setCursor(0,1);
lcd.print(t-4);
delay(1500);
lcd.clear();

lcd.setCursor(0, 0);
lcd.print("EHYLENE CONCENTRA");
lcd.setCursor(0,1);
lcd.print(p);
delay(1500);
lcd.clear(); 

lcd.setCursor(0, 0);
lcd.print("CO2 CONCENTRATION");

lcd.setCursor(0,1);
lcd.print(s);
delay(1500);
lcd.clear();

lcd.setCursor(0, 0);
lcd.print("LIGHT INTENSITY");

lcd.setCursor(0,1);
lcd.print(l);
delay(1500);
lcd.clear();

 if(isnan(t) || isnan(h)||isnan(p) || isnan(s) || isnan(l)  )
    {
      Serial.println(F("Failed to read from sensor "));
      return;
    }
    http.begin(client,serverName);
    http.addHeader("Content-Type","application/x-www-form-urlencoded");
    String httpRequestData ="api_key="+ apikey + "&temperature=" + String(t-4)+"&humidity=" + String(h)+"&ethylene=" + String(p)+"&co2=" + String(s)+"&light=" + String(l) ;
    int httpResponseCode = http.POST(httpRequestData);
 
    Serial.print("HTTP Response code: ");
    Serial.println(httpResponseCode);
    http.end();
      } 
    else
    {
      Serial.println("WiFi Disconnected");
    }
  

}
